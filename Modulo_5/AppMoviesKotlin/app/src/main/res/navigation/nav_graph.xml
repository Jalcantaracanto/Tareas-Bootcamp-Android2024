<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homePage">

    <fragment
        android:id="@+id/homePage"
        android:name="com.example.appmovieskotlin.fragments.HomePage"
        android:label="fragment_home_page"
        tools:layout="@layout/fragment_home_page">
        <action
            android:id="@+id/action_homePage_to_detailPage"
            app:destination="@id/detailPage" />
    </fragment>
    <fragment
        android:id="@+id/detailPage"
        android:name="com.example.appmovieskotlin.fragments.DetailPage"
        android:label="fragment_detail_page"
        tools:layout="@layout/fragment_detail_page">
        <argument
            android:name="movie"
            app:argType="com.example.appmovieskotlin.model.Movie" />
        <action
            android:id="@+id/action_detailPage_to_homePage"
            app:destination="@id/homePage" />
    </fragment>
</navigation>